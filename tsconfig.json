{
    "compilerOptions": {
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "module": "ES2015",
        "typeRoots": [
            "./types",
            "./node_modules/@types",
            "./typings.d.ts"
        ],
        "paths": {
            "@utils/*": ["./utils/*"],
            "@nai/*": ["./naiModules/*"]
        },
        "baseUrl": "./src"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js"
    ]
}
