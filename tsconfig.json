{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ES2020",
    "target": "ES2020",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@utils/*": ["./utils/*"],
      "@nai/*": ["./naiModules/*"],
      "@config": ["./config/index"],
      "@spec/*": ["../spec-resources/*"],
      "@src/*": ["./*"]
    },
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}
